{% extends 'base.html.twig' %}

{% block title %}Liste des enclos{% endblock %}

{% block preload %}
    <link rel="preload" href="/img/admin/background-liste-enclos.jpg" as="image">
    <link rel="preload" href="/img/logo.png" as="image">
    <link rel="preload" href="/img/ticket.svg" as="image">
    <link rel="preload" href="/img/reservation.svg" as="image">
    <link rel="preload" href="/img/plan.svg" as="image">
    <link rel="preload" href="/img/animals.svg" as="image">
    <link rel="preload" href="/img/program.svg" as="image">
    <link rel="preload" href="/img/ticket.svg" as="image">
    <link rel="preload" href="/img/arrow-right.svg" as="image">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link href='https://fonts.googleapis.com/css?family=Sofia Sans' rel='stylesheet'>
{% endblock %}

{% block style %}
    header > .frame {
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.70) 0%, rgba(0, 0, 0, 0.00) 15.57%), radial-gradient(193.44% 113.09% at 0% 0%, rgba(0, 0, 0, 0.70) 0%, rgba(0, 0, 0, 0.00) 100%), url("/img/admin/background-liste-enclos.jpg"), lightgray 50% / cover no-repeat;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }
{% endblock %}

{% block body %}
    {{ include('home/_header.html.twig', {titre: 'Liste des enclos', description: ''}, with_context=false) }}

    <section id="liste">
        <div class="admin-liste">
            <h2>Liste des enclos</h2>
            <p>
                <strong>{{ enclos | length }}</strong> enclos répondent aux critères de recherche !
            </p>
            <div class="admin-box">
                <div class="admin-filtre">
                    <h3>Filtrer</h3>
                    <form>
                        <div class="admin-filtre-filtres">
                            <label>
                                Nom
                                <input type="text" name="nomEnclos" placeholder="Nom">
                            </label>
                            <label>
                                Description
                                <input type="text" name="descEnclos" placeholder="Description">
                            </label>
                        </div>
                        <button class="button" type="submit">Filtrer</button>
                    </form>
                </div>
            </div>
            <div class="admin-box">
                {% if enclos %}
                <div class="admin-item">
                    <div class="admin-item-label">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
                            <path d="M5 21.25V20H10.9375V21.25H5ZM5 15.625V14.375H17.9562V15.625H5ZM5 10V8.75H25V10H5Z" fill="black"></path>
                        </svg>
                        <div class="admin-item-label-category">
                            <span class="admin-fixed-text">Nom</span>
                            <span class="admin-fixed-text-large">Description</span>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="admin-item">
                    <p>Aucun évènement ne correspond aux critères de recherche.</p>
                </div>
                {% endif %}
                {% for enclo in enclos %}
                    <div class="admin-item">
                        <div class="admin-item-label">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 30 30" fill="none">
                                <path d="M2.5 15C2.5 10.2863 2.5 7.92875 3.965 6.465C5.42875 5 7.78625 5 12.5 5H17.5C22.2137 5 24.5712 5 26.035 6.465C27.5 7.92875 27.5 10.2863 27.5 15V17.5C27.5 22.2137 27.5 24.5712 26.035 26.035C24.5712 27.5 22.2137 27.5 17.5 27.5H12.5C7.78625 27.5 5.42875 27.5 3.965 26.035C2.5 24.5712 2.5 22.2137 2.5 17.5V15Z" stroke="black" stroke-width="1.75"></path>
