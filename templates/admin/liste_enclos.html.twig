                            </svg>
                            <div class="admin-item-label-category">
                                <span class="admin-fixed-text"><strong>{{ enclo.nomEnclos }}</strong></span>
                                <span class="admin-fixed-text-large">{{ enclo.descEnclos }}</span>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
