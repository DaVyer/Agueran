{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "doctrine/doctrine-bundle": "^2.11",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^2.17",
        "easycorp/easyadmin-bundle": "^4.8",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.24",
        "symfony/asset": "6.3.*",
        "symfony/console": "6.3.*",
        "symfony/doctrine-messenger": "6.3.*",
        "symfony/dotenv": "6.3.*",
        "symfony/expression-language": "6.3.*",
        "symfony/flex": "^2",
        "symfony/form": "6.3.*",
        "symfony/framework-bundle": "6.3.*",
        "symfony/http-client": "6.3.*",
        "symfony/intl": "6.3.*",
        "symfony/mailer": "6.3.*",
        "symfony/mime": "6.3.*",
        "symfony/monolog-bundle": "^3.0",
        "symfony/notifier": "6.3.*",
        "symfony/process": "6.3.*",
        "symfony/property-access": "6.3.*",
        "symfony/property-info": "6.3.*",
        "symfony/runtime": "6.3.*",
        "symfony/security-bundle": "6.3.*",
        "symfony/serializer": "6.3.*",
        "symfony/stimulus-bundle": "^2.13",
        "symfony/string": "6.3.*",
        "symfony/translation": "6.3.*",
        "symfony/twig-bundle": "6.3.*",
        "symfony/ux-chartjs": "^2.13",
        "symfony/validator": "6.3.*",
        "symfony/web-link": "6.3.*",
        "symfony/webpack-encore-bundle": "^2.1",
        "symfony/yaml": "6.3.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/intl-extra": "^3.8",
        "twig/twig": "^2.12|^3.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "start:linux": [
            "Composer\\Config::disableProcessTimeout",
            "symfony serve"
        ],
        "test:cs" : [
            "php vendor/bin/php-cs-fixer fix --dry-run --diff"
        ],
        "fix:cs" : [
            "php vendor/bin/php-cs-fixer fix"
        ],
        "start:windows" : [
            "Composer\\Config::disableProcessTimeout",
            "symfony serve"
        ],
        "start" : [
            "@start:linux"
        ],
        "test:codeception" : [
            "codecept clean",
            "php bin/console doctrine:database:drop --force --quiet --env=test",
            "php bin/console doctrine:database:create --quiet --env=test",
            "php bin/console doctrine:schema:create --quiet --env=test",
            "php vendor/bin/codecept run"
        ],
        "test" : [
            "@test:cs",
            "@test:codeception"
        ],
        "db" : [
            "php bin/console doctrine:database:drop --force --if-exists",
            "php bin/console doctrine:database:create",
            "php bin/console doctrine:migrations:migrate --no-interaction",
            "php bin/console doctrine:fixtures:load --no-interaction"
        ]
    },
    "scripts-descriptions": {
        "start:linux": "Permet de lancer le serveur, sans arrêt définit, en local symfony sous linux.",
        "test:cs": "Permet de lister tous les changements à faire, sans les faire.",
        "fix:cs": "Permet de faire les changements donnés par la commande « **test:cs** ».",
        "start:windows": "Permet de lancer le serveur, sans arrêt définit, en local symfony sous un environnement Windows.",
        "start": "Fait un appel au script « **start:linux** » et permet ainsi de lancer le server en local sous un environnement Linux.",
        "test:codeception": "Nettoie le répertoire (_output) puis lance les tests de Codeception",
        "test": "Fait un appel au script « **test:cs** » puis un appel au script « **test:codeception** »",
        "db": "Exécute la destruction forcée de la base de données, la création de la base de données, l'application des migrations successives et enfin la génération des données factices."
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.3.*"
        }
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^3.0",
        "codeception/module-symfony": "^3.1",
        "doctrine/doctrine-fixtures-bundle": "^3.5",
        "friendsofphp/php-cs-fixer": "^3.38",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "6.3.*",
        "symfony/css-selector": "6.3.*",
        "symfony/debug-bundle": "6.3.*",
        "symfony/maker-bundle": "^1.51",
        "symfony/phpunit-bridge": "^6.3",
        "symfony/stopwatch": "6.3.*",
        "symfony/web-profiler-bundle": "6.3.*",
        "zenstruck/foundry": "^1.36"
    }
}
